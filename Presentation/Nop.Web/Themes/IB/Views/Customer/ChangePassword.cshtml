@model ChangePasswordModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page account-page change-password-page">
        <div class="page-title">
            <h1>@T("Account.MyAccount") - @T("Account.ChangePassword")</h1>
            <hr />
        </div>
        <div class="page-body">
            @if (!String.IsNullOrEmpty(Model.Result))
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            @{
    var validationSummary = Html.ValidationSummary(true);
            }
            @if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
            {
                <div class="message-error">@validationSummary</div>
            }


            <div class="form-horizontal">

                <div class="form-group">
                    <div class="row">
                        <label class="col-sm-2 control-label">@Html.LabelFor(model => model.OldPassword, new { }, ":")</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.OldPassword) @Html.RequiredHint()
                        </div>
                        <div class="col-sm-6">

                            @Html.ValidationMessageFor(model => model.OldPassword)
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-2 control-label">@Html.LabelFor(model => model.NewPassword, new { }, ":")</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.NewPassword, new { @class = "form-control" }) @Html.RequiredHint()
                        </div>
                        <div class="col-sm-6">

                            @Html.ValidationMessageFor(model => model.NewPassword)
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-2 control-label">@Html.LabelFor(model => model.ConfirmNewPassword, new { }, ":")</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.ConfirmNewPassword) @Html.RequiredHint()
                        </div>
                        <div class="col-sm-6">

                            @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                           
                            <input type="submit" class="btn btn-submit p5-t p5-b p-l p-r" value="@T("Account.ChangePassword.Button")" />
                        </div>
                    </div>
                </div>
            </div>

