@model List<Nop.Web.Models.Catalog.ProductOverviewModel>
@{
    Layout =null;

}

@foreach (Nop.Web.Models.Catalog.ProductOverviewModel pm in Model)
{
    <div class="col-sm-6 col-md-3" id="@pm.Id">
        <div class="thumbnail">

            <div class="thum-img">
                <a>  <img alt="" src="@pm.DefaultPictureModel.FullSizeImageUrl" title="@pm.Name" /></a>
            </div>


            <div class="caption">
                <h3>
                    <label type="text" defaultval="Title" value="" class="js-default-val-text">@pm.Name</label>
                </h3>
                <p>
                    <label type="text" defaultval="Date" value="" class="js-default-val-text"></label>
                    <br />
                    <label type="text" defaultval="£Price" value="" class="js-default-val-text">@pm.ProductPrice.Price</label>
                </p>
            </div>
        </div>
    </div>

}
